<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingList.Views.CategoryAdd"
             Title="Dodaj Kategorię">
    <VerticalStackLayout 
        Padding="20"
        Spacing="50"
        HorizontalOptions="Center"
        VerticalOptions="Center">

        <Label 
            Text="Dodaj Nową Kategorię"
            HorizontalOptions="Center"
            FontAttributes="Bold"
            FontSize="20"
            TextColor="White"/>

        <Editor 
            x:Name="categoryName"
            Placeholder="Wprowadź nazwę kategorii"
            HorizontalOptions="FillAndExpand"
            HeightRequest="50"
            Margin="0,10"
            FontSize="16"
            TextColor="White"/>

        <Button
            x:Name="addCategoryButton"
            Text="Dodaj Kategorię"
            HorizontalOptions="Center"
            Margin="5,10"
            FontSize="16"
            FontAttributes="Bold"
            CornerRadius="10"
            Padding="10"
            HeightRequest="50"
            TextColor="black"
            Clicked="OnAddCategoryButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
